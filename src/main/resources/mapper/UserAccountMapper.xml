<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.void2.careermanagement.dao.UserAccountDao">
    <select id="loginUserSelect" resultType="com.void2.careermanagement.dto.UserDto">
        SELECT * FROM tbl_user WHERE user_id=#{user_id} AND user_pw=#{user_pw};
    </select>
    <insert id="userInsert">
        INSERT INTO tbl_user VALUES(#{U.user_id},#{U.user_pw},#{U.user_name},#{U.user_phone},#{U.user_email},#{U.user_gender},#{U.user_birth},DEFAULT, NULL)
    </insert>
    <select id="findUserIdSelect" resultType="_integer">
        SELECT COUNT(*) FROM tbl_user WHERE user_id=#{user_id}
    </select>
</mapper>